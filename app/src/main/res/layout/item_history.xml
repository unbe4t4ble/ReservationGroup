<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myCardviewKataKita"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <View
            android:id="@+id/divideHead"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#e9d4d1d1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/label1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelview1"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_toRightOf="@+id/label1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewField1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_toRightOf="@+id/labelview1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/label2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="User"
                android:layout_below="@+id/textViewField1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelview2"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_below="@+id/textViewField1"
                android:layout_toRightOf="@+id/label2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewField2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:layout_below="@+id/textViewField1"
                android:layout_toRightOf="@+id/labelview2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/label3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="History"
                android:layout_below="@+id/textViewField2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelview3"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_below="@+id/textViewField2"
                android:layout_toRightOf="@+id/label3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewField3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewField2"
                android:layout_toRightOf="@+id/labelview3"
                android:text="History"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:textSize="14sp" />



        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e9d4d1d1" />


    </LinearLayout>


</android.support.v7.widget.CardView>