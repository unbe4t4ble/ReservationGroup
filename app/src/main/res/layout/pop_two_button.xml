<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageMessage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/logokz_message"/>

        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageMessage"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageMessage"
            android:layout_below="@+id/txtJudul"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/btnYes"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:text="@string/btn_yes_message"
            android:textStyle="bold"
            android:background="@drawable/blue_button"
            style="@style/DefaultButtonTextNormal" />
        <Button
            android:id="@+id/btnNo"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/btn_no_message"
            android:textStyle="bold"
            android:background="@drawable/blue_button"
            style="@style/DefaultButtonTextNormal" />
    </LinearLayout>



</LinearLayout>